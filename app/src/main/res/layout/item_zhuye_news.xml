<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_recyclerview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/toolbar_background"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_zhuye_news_imageview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/xinwen01"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="2.8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_zhuye_news_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.0"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="2"
                android:text="苏通大桥迎反程最高峰 春节七天假期约65万辆车免费国境 苏通大桥迎反程最高峰 春节七天假期约65万辆车免费国境"
                android:textColor="@color/daohang"
                android:textSize="@dimen/zhuye_xinwen_title"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_zhuye_news_image_fabu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/zhuye_guanggao"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/item_zhuye_news_fabu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:text="@string/xingtong"
                    android:textSize="@dimen/moren_size"/>

                <TextView
                    android:id="@+id/item_zhuye_news_ago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3小时前"
                    android:textSize="@dimen/moren_size"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleX="0.7"

                    android:scaleY="0.7"
                    android:src="@drawable/zhuye_eye"/>

                <TextView
                    android:id="@+id/item_zhuye_news_hits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal|left"
                    android:text="2333"
                    android:textSize="@dimen/moren_size"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
