<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/xiangqing_bottombar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:background="@color/main_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <EditText

        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"

        android:background="@drawable/edittext_selected"
        android:hint="@string/woyaopinglun"
        android:textSize="15dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp">

        <ImageView
            android:id="@+id/pinglun_imageview"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/pinglun_num"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/liuyan"/>

        <TextView
            android:id="@+id/pinglun_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/pinglun_imageview"
            android:layout_marginLeft="15dp"
            android:background="@drawable/pinglun_num"
            android:text="8888"
            android:textColor="@color/toolbar_background"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp">

        <ImageView
            android:id="@+id/zan_imageview"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/zan_num"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/zan"/>

        <TextView
            android:id="@+id/zan_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/zan_imageview"
            android:layout_marginLeft="15dp"
            android:background="@drawable/pinglun_num"
            android:text="8888"
            android:textColor="@color/toolbar_background"/>
    </RelativeLayout>

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/pinglun_fenxiang"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/fenxiang"/>
</LinearLayout>