<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_weight="1"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/custom_radio_button_image"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/activity_fenxiang01"/>

    <LinearLayout
        android:id="@+id/custom_radio_button_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jifenzhi"
            android:textColor="@color/tiaokuan"
            android:textSize="@dimen/jifenzhi"/>

        <TextView
            android:id="@+id/jifenzhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="10"
            android:textColor="@color/tiaokuan"
            android:textSize="@dimen/jifenzhi"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/yifenxiang_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1234"
            android:textSize="@dimen/jifenzhi"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/yifenxiang_num"
            android:textSize="@dimen/jifenzhi"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/custom_radio_button_imageview_dianji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitXY"
        android:src="@drawable/dianjifenxiang01"/>
</LinearLayout>