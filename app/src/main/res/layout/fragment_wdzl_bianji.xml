<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@color/toolbar_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/wdzl_bianji_name_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="@string/xingming"
            android:textColor="@color/daohang"
            android:textSize="@dimen/wdzl01"/>

        <EditText
            android:id="@+id/wdzl_bianji_name_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/edit_text_tijiaodingdan_shape"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingTop="3dp"
            android:text="李可可"
            android:textColor="@color/daohang02"
            android:textSize="@dimen/wdzl02"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_divider"
        android:background="@color/main_background"/>

    <LinearLayout
        android:id="@+id/wdzl_bianji_nickname_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="@string/nicheng"
            android:textColor="@color/daohang"
            android:textSize="@dimen/wdzl01"/>

        <EditText
            android:id="@+id/wdzl_bianji_nickname_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/edit_text_tijiaodingdan_shape"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingTop="3dp"
            android:text="kkkboy"
            android:textColor="@color/daohang02"
            android:textSize="@dimen/wdzl02"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_divider"
        android:background="@color/main_background"/>

    <LinearLayout
        android:id="@+id/wdzl_bianji_sex_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="@string/xingbie"
            android:textColor="@color/daohang"
            android:textSize="@dimen/wdzl01"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/wdzl_bianji_sex_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:button="@null"
                android:drawableRight="@drawable/custom_dialog_item_bg"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:text="@string/grzx_sex_man"
                android:textColor="@color/daohang02"
                android:textSize="20sp"/>


            <RadioButton
                android:id="@+id/wdzl_bianji_sex_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:button="@null"
                android:drawableRight="@drawable/custom_dialog_item_bg"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:text="@string/grzx_sex_woman"
                android:textColor="@color/daohang02"
                android:textSize="20sp"/>
        </RadioGroup>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_divider"
        android:background="@color/second_background"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/main_background"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_divider"
        android:background="@color/second_background"/>

    <LinearLayout
        android:id="@+id/wdzl_bianji_city_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="@string/city"
            android:textColor="@color/daohang"
            android:textSize="@dimen/wdzl01"/>

        <EditText
            android:id="@+id/wdzl_bianji_city_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/edit_text_tijiaodingdan_shape"
            android:clickable="true"
            android:focusable="false"
            android:hint="@string/sheng_shi_qu"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingTop="3dp"
            android:textColor="@color/daohang02"
            android:textSize="@dimen/wdzl02"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_divider"
        android:background="@color/main_background"/>

    <LinearLayout
        android:id="@+id/wdzl_bianji_address_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="@string/zhuzhi"
            android:textColor="@color/daohang"
            android:textSize="@dimen/wdzl01"/>

        <EditText
            android:id="@+id/wdzl_bianji_address_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/edit_text_tijiaodingdan_shape"
            android:gravity="top"
            android:maxLines="3"
            android:paddingBottom="4dp"
            android:paddingLeft="6dp"
            android:paddingTop="4dp"
            android:textSize="@dimen/wdzl02"/>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_divider"
        android:background="@color/second_background"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/main_background"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_divider"
        android:background="@color/second_background"/>

</LinearLayout>