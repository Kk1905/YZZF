<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/xiangqing_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/main_background"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/zheye_huatijiaoliu_tiaozhuan"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/zhuye_eye"/>

                    <TextView
                        android:id="@+id/xiangqing_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="12306"
                        android:textSize="15dp"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/toolbar_background"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"

                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/user_imageview"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/user"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/user_imageview"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="用户名"
                                android:textSize="18dp"/>

                            <TextView
                                android:id="@+id/time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/user_name"
                                android:layout_alignRight="@+id/user_name"
                                android:layout_below="@+id/user_name"
                                android:layout_marginTop="3dp"
                                android:text="3小时前"
                                android:textSize="15dp"/>
                        </RelativeLayout>

                    </LinearLayout>

                    <ImageView

                        android:id="@+id/guanzhu"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="right|center_vertical"
                        android:adjustViewBounds="true"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/guanzhu"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dialog_divider"
                    android:background="@color/main_background"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="苏通大桥迎返程最高峰 春节假期七天约65万辆免费过境"
                        android:textColor="@color/daohang"
                        android:textSize="@dimen/xiangqing_title"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="20dp"
                        android:text="今天是春节长假最后一天，苏通大桥迎来返程高峰。全天车流量预计将超过12万辆"
                        android:textColor="@color/daohang"
                        android:textSize="@dimen/xiangqing_content"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/xiangqing_image01"/>

                    <TextView
                        android:id="@+id/jubao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="@string/jubao"
                        android:textColor="@color/daohang"
                        android:textSize="16sp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/toolbar_background"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remenpinglun"
                    android:textColor="@color/daohang"
                    android:textSize="20sp"/>

                <com.example.administrator.yzzf.CustomView.Custom_RMPL_XiangQing
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:rmpl_content="早知道会堵车，就TMD不上去了，现在好了，堵成这样，还不如直接走过去呢，Y啰！"
                    app:rmpl_is_ll_visible="false"
                    app:rmpl_num="568"
                    app:rmpl_time01="3小时前"
                    app:rmpl_time02="3小时前"
                    app:rmpl_userimage_src="@drawable/user"
                    app:rmpl_username="王五"></com.example.administrator.yzzf.CustomView.Custom_RMPL_XiangQing>

                <com.example.administrator.yzzf.CustomView.Custom_RMPL_XiangQing
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:rmpl_content="早知道会堵车，就TMD不上去了，现在好了，堵成这样，还不如直接走过去呢，Y啰！"
                    app:rmpl_is_ll_visible="false"
                    app:rmpl_num="568"
                    app:rmpl_time01="3小时前"
                    app:rmpl_time02="3小时前"
                    app:rmpl_userimage_src="@drawable/user"
                    app:rmpl_username="王五"></com.example.administrator.yzzf.CustomView.Custom_RMPL_XiangQing>

                <com.example.administrator.yzzf.CustomView.Custom_RMPL_XiangQing
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:rmpl_content="早知道会堵车，就TMD不上去了，现在好了，堵成这样，还不如直接走过去呢，Y啰！"
                    app:rmpl_is_ll_visible="false"
                    app:rmpl_num="568"
                    app:rmpl_time01="3小时前"
                    app:rmpl_time02="3小时前"
                    app:rmpl_userimage_src="@drawable/user"
                    app:rmpl_username="王五"></com.example.administrator.yzzf.CustomView.Custom_RMPL_XiangQing>

                <TextView
                    android:id="@+id/gengduopinglun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="@string/gengduopinglun"
                    android:textSize="20dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_divider"
                android:background="@color/colorPrimaryDark"/>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
</merge>