<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->

    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--自定义带输入框对话框主题-->
    <style name="custom_dialog_editText" parent="android:Theme.Dialog">
        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 是否没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否背景模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 设置背景模糊的透明度-->
        <item name="android:backgroundDimAmount">0.5</item>
        <!--设置软键盘的交互模式-->
        <item name="android:windowSoftInputMode">adjustPan|stateVisible</item>
        <!-- 动画 -->
        <item name="android:windowAnimationStyle">@style/bottom_anim_style</item>
    </style>
    <!--自定义普通对话框主题-->
    <style name="custom_dialog_normal" parent="android:Theme.Dialog">
        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 是否没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否背景模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 设置背景模糊的透明度-->
        <item name="android:backgroundDimAmount">0.5</item>
        <!--设置软键盘的交互模式-->
        <item name="android:windowSoftInputMode">adjustPan</item>
        <!-- 动画 -->
        <item name="android:windowAnimationStyle">@style/bottom_anim_style</item>
    </style>

    <style name="bottom_anim_style">
        <item name="android:windowEnterAnimation">@anim/dialog_in_animation</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_animation</item>
    </style>

